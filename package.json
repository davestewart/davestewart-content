{
  "name": "davestewart-content",
  "description": "Personal website content",
  "type": "module",
  "scripts": {
    "new-post": "node scripts/new-post.js",
    "edit-post": "node scripts/edit-post.js",
    "check-tags": "node scripts/check-tags.js",
    "optimise-images": "sh -c 'pnpm run optimise-images:list | xargs -I {} tinypng {}'",
    "optimise-images:list": "(git diff --name-only --diff-filter=AM; git diff --name-only --cached --diff-filter=AM; git ls-files --others --exclude-standard) | sort -u | grep -E '\\.(png|jpg|jpeg|gif|webp)$'",    "prepare": "husky"
  },
  "dependencies": {
    "canvas": "^3.2.1",
    "glob": "^13.0.0",
    "inquirer": "^13.2.0",
    "js-yaml": "^4.1.1"
  },
  "devDependencies": {
    "husky": "^9.1.7"
  }
}
